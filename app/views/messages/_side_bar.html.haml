.side-bar
  .bar-user
    .bar-user__name
      .bar-user__name--left
        = current_user.name
      %ul.bar-user__name__right
        %li.bar-user__name__right--group
          = link_to new_group_path do
            = icon('far', 'edit', class: "bar-user__name__right--icon")
        %li
          = link_to edit_user_path(current_user) do
            = icon("fa", "cog",class: "bar-user__name__right--btn")
  .bar-group
    .bar-group__box
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .bar-group__box__name
            = group.name
        .bar-group__box__message
          = group.show_last_message
          
   
